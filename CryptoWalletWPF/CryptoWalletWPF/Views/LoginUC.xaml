<UserControl x:Class="CryptoWalletWPF.NewViews.LoginUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoWalletWPF.NewViews"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <Grid>
        <ComboBox ItemsSource="{Binding NetworkList}" SelectedItem="{Binding SelectedNetwork}" x:Name="NetworkChooserComboBox" HorizontalAlignment="Center" Margin="0,53,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Choose your blockchain network" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top"/>
        <Button Command="{Binding loadAccountButtonCommand}" x:Name="loadAccountButton" Content="Load account" HorizontalAlignment="Center" Margin="0,167,0,0" VerticalAlignment="Top" Height="35" Width="130"/>
        <Button x:Name="createAccountButton" Content="Create account" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="35" Width="130"/>

    </Grid>
</UserControl>
