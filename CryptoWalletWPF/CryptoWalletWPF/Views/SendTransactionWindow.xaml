            <Label Content="Amount" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
            <Label Content="Gas price" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top"/>
            <Label Content="Gas amount" HorizontalAlignment="Left" Margin="10,118,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid Height="45" VerticalAlignment="Top" Margin="0,164,0,0">
            <Button Content="Back" HorizontalAlignment="Left" Margin="57,0,0,0" VerticalAlignment="Center" Width="85" Height="25"/>
