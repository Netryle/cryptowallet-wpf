<UserControl x:Class="CryptoWalletWPF.Views.LoadAccountUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoWalletWPF.Views"
             mc:Ignorable="d" 
              d:DesignHeight="400" d:DesignWidth="550">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="D:\GraduateWork\cryptowallet-wpf\CryptoWalletWPF\CryptoWalletWPF\Images\back.jpg" />
        </Grid.Background>
        <Label Content="Load from" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Style="{StaticResource HeaderStyle}"/>
        <Button Command="{Binding privateKeyButtonCommand}" x:Name="privateKeyButton" Content="Private key" HorizontalAlignment="Center" Margin="0,190,0,0" VerticalAlignment="Top" Style="{StaticResource ButtonStyle}"/>
        <Button Command="{Binding hdWalletButtonCommand}" x:Name="walletHDButton" Content="HD Wallet" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,230,0,0" Style="{StaticResource ButtonStyle}"/>
        <Button Command="{Binding backButtonCommand}" Content="Back" HorizontalAlignment="Center" Margin="0,320,0,0" VerticalAlignment="Top" Style="{StaticResource ButtonStyle}"/>

    </Grid>
</UserControl>
