<UserControl x:Class="CryptoWalletWPF.NewViews.LoadAccountFromPrivateKeyUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoWalletWPF.NewViews"
             mc:Ignorable="d" 
              d:DesignHeight="400" d:DesignWidth="550">
    <Grid>
        <Label Content="Enter your private key" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox Text="{Binding PrivateKey}"
            x:Name="enterPrivateKeyTextBox" HorizontalAlignment="Center" Margin="0,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="384" TextAlignment="Center"
            />
        <Button Command="{Binding backButtonCommand}" x:Name="backButton" Content="Back" HorizontalAlignment="Left" Margin="174,240,0,0" VerticalAlignment="Top" Width="76"/>
        <Button Command="{Binding loadButtonCommand}" x:Name="loadButton" Content="Load" HorizontalAlignment="Left" Margin="300,240,0,0" VerticalAlignment="Top" Width="76"/>

    </Grid>
</UserControl>
