<UserControl x:Class="CryptoWalletWPF.NewViews.HDWalletCreatingUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoWalletWPF.NewViews"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <Grid>
        <Label Content="Your seed phrase" HorizontalAlignment="Left" Margin="114,43,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="(Save it for future login and recovery)" HorizontalAlignment="Left" Margin="91,70,0,0" VerticalAlignment="Top" Height="26"/>
        <TextBox x:Name="seedPhraseTextBox" HorizontalAlignment="Left" Margin="91,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" Height="101" TextAlignment="Center" IsReadOnly="True"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="91,204,0,0" VerticalAlignment="Top" FontSize="16" Height="28"/>
        <Label Content="Confirm password" HorizontalAlignment="Left" Margin="91,252,0,0" VerticalAlignment="Top" FontSize="16" Height="28"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="100,232,0,0" VerticalAlignment="Top" Width="197"/>
        <PasswordBox x:Name="confirmPasswordBox" HorizontalAlignment="Left" Margin="100,280,0,0" VerticalAlignment="Top" Width="197"/>
        <Button Content="Create" HorizontalAlignment="Left" Margin="209,318,0,0" VerticalAlignment="Top" Width="67"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="114,318,0,0" VerticalAlignment="Top" Width="67"/>
        <Button x:Name="copyButton" Content="C" HorizontalAlignment="Left" Margin="302,101,0,0" VerticalAlignment="Top" Height="25" Width="26"/>

    </Grid>
</UserControl>
