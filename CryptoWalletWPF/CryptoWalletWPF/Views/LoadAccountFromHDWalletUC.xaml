<UserControl x:Class="CryptoWalletWPF.NewViews.LoadAccountFromHDWalletUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoWalletWPF.NewViews"
             mc:Ignorable="d" 
              d:DesignHeight="400" d:DesignWidth="550">
    <Grid>
        <PasswordBox HorizontalAlignment="Center" Margin="0,253,0,0" VerticalAlignment="Top" Width="229" PasswordChanged="PasswordBox_PasswordChanged"/>
        <TextBox Text="{Binding PhraseString}" HorizontalAlignment="Center" Margin="0,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="286" Height="67"/>
        <Button Command="{Binding backButtonCommand}" Content="Back" HorizontalAlignment="Left" Margin="188,326,0,0" VerticalAlignment="Top" Width="75" Height="25"/>
        <Button Command="{Binding loadButtonCommand}" Content="Load" HorizontalAlignment="Left" Margin="288,326,0,0" VerticalAlignment="Top" Width="75" Height="25"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="160,225,0,0" VerticalAlignment="Top" FontSize="16" Height="28"/>
        <Label Content="Seed phrase" HorizontalAlignment="Left" Margin="132,111,0,0" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</UserControl>
