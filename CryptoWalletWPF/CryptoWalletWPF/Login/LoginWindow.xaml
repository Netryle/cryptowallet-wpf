<Window x:Class="CryptoWalletWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoWalletWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="400" Width="600">
    <Grid>
        <ComboBox x:Name="NetworkChooserComboBox" HorizontalAlignment="Center" Margin="0,53,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Choose your blockchain network" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top"/>
        <Button x:Name="LoadAccountButton" Content="Load account" HorizontalAlignment="Center" Margin="0,167,0,0" VerticalAlignment="Top" Height="35" Width="130"/>
        <Button x:Name="CreateAccountButton" Content="Create account" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="35" Width="130"/>

    </Grid>
</Window>
