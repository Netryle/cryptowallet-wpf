<UserControl x:Class="CryptoWalletWPF.Views.CreateAccountUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoWalletWPF.Views"
             mc:Ignorable="d" 
              d:DesignHeight="400" d:DesignWidth="550">
    <Grid>
        <Label Content="Create" HorizontalAlignment="Center" Margin="0,114,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Command="{Binding accountButtonCommand}" x:Name="accountButton" Content="Account" HorizontalAlignment="Center" VerticalAlignment="Center" Width="130" Height="35"/>
        <Button Command="{Binding hdWalletButtonCommand}" x:Name="walletHDButton" Content="HD Wallet" HorizontalAlignment="Center" Margin="0,223,0,0" VerticalAlignment="Top" Width="130" Height="35"/>
        <Button Command="{Binding backButtonCommand}" Content="Back" HorizontalAlignment="Center" Margin="0,319,0,0" VerticalAlignment="Top" Width="130" Height="35"/>

    </Grid>
</UserControl>
