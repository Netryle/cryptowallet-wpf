<UserControl x:Class="CryptoWalletWPF.NewViews.LoadAccountUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoWalletWPF.NewViews"
             mc:Ignorable="d" 
              d:DesignHeight="400" d:DesignWidth="550">
    <Grid>
        <Label Content="Load from" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Command="{Binding privateKeyButtonCommand}" x:Name="privateKeyButton" Content="Private key" HorizontalAlignment="Center" Margin="0,165,0,0" VerticalAlignment="Top" Width="130" Height="35"/>
        <!--<Button Command="{Binding accountFileButtonCommand}" x:Name="accountFileButton" Content="Account file" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="35" Margin="0,205,0,0"/>-->
        <Button Command="{Binding hdWalletButtonCommand}" x:Name="walletHDButton" Content="HD Wallet" HorizontalAlignment="Center" VerticalAlignment="Top" Width="130" Height="35" Margin="0,205,0,0"/>
        <Button Command="{Binding backButtonCommand}" Content="Back" HorizontalAlignment="Center" Margin="0,328,0,0" VerticalAlignment="Top" Width="130" Height="35"/>

    </Grid>
</UserControl>
